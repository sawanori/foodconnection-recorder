# データベース
DATABASE_URL=sqlite+aiosqlite:///./food_connection.db

# 出力先
OUTPUT_BASE_DIR=../output

# Playwright設定
PLAYWRIGHT_HEADLESS=true
PLAYWRIGHT_TIMEOUT=30000

# 録画設定
RECORDING_WIDTH=1366
RECORDING_HEIGHT=768
RECORDING_TARGET_DURATION=27
RECORDING_FPS=60

# リトライ設定
MAX_RETRIES=3
RETRY_BACKOFF_BASE=2

# セキュリティ
ALLOWED_OUTPUT_DIR_PATTERN=^[a-zA-Z0-9_-]+$

# CORS設定
FRONTEND_URL=http://localhost:3000

# 画像生成設定
IMAGE_GENERATOR=claude
ANTHROPIC_API_KEY=sk-ant-...
GEMINI_API_KEY=
IMAGE_QUALITY=85
MAX_IMAGE_BASE64_SIZE=3600000
GENERATION_TIMEOUT=900
